target_neuron: |
    tau = 5*ms : second
    E = -80*mV : volt
    s_total : 1
    # N_pre or N_post?
    # Note: there must be an equation for a variable named 'i'
    i = -g/N_pre*s_total*(v-E) : amp

synapse: |
    tau = 5*ms : second
    E = -80*mV : volt
    ds/dt=1000.*2.*(1 + tanh(v_pre/(4.*mV)))*(1-s)/ms - s/tau : 1 (clock-driven)
    s_total_post = s : 1 (summed)

connection: |
    i=numpy.arange(10), j=1
